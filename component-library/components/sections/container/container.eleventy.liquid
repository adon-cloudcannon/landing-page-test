{% assign classes = "" %}

{% case background %}
	{% when 'caramel' %}
		{% assign classes = classes | append: " bg-caramel" %}
	{% when 'sky' %}
		{% assign classes = classes | append: " bg-sky" %}
	{% when 'cc-blue' %}
		{% assign classes = classes | append: " bg-cc text-white" %}
	{% when 'ash' %}
		{% assign classes = classes | append: " bg-ash" %}
	{% when 'night' %}
		{% assign classes = classes | append: " bg-night text-white" %}
	{% when 'sun-spot' %}
		{% assign classes = classes | append: " sun-spot" %}
	{% else %}
		{% assign classes = classes | append: " bg-white" %}
{% endcase %}

{% case rounded %}
	{% when 'top' %}
		{% assign classes = classes | append: " rounded-t-[40px] -mt-[40px]" %}
	{% when 'full' %}
		{% assign classes = classes | append: " rounded-[20px]" %}
{% endcase %}

{% if margin %}
	{% if margin.top %}
		{% assign move_prefix = "" %}
		{% if margin.top < 0 %}
			{% assign margin_prefix = "-" %}
		{% endif %}
		{% assign px = margin.top | abs %}

		{% assign classes = classes | append: " " | append: margin_prefix | append: "mt-[" | append: px | append: "px]" %}
	{% endif %}

	{% if margin.left %}
		{% assign margin_prefix = "" %}
		{% if margin.left < 0 %}
			{% assign margin_prefix = "-" %}
		{% endif %}
		{% assign px = margin.left | abs %}

		{% assign classes = classes | append: " " | append: margin_prefix | append: "ml-[" | append: px | append: "px]" %}
	{% endif %}

	{% if margin.bottom %}
		{% assign margin_prefix = "" %}
		{% if margin.bottom < 0 %}
			{% assign margin_prefix = "-" %}
		{% endif %}
		{% assign px = margin.bottom | abs %}

		% assign classes = classes | append: " " | append: margin_prefix | append: "mb-[" | append: px | append: "px]" %}
	{% endif %}

	{% if margin.right %}
		{% assign margin_prefix = "" %}
		{% if margin.right < 0 %}
			{% assign margin_prefix = "-" %}
		{% endif %}
		{% assign px = margin.right | abs %}

		{% assign classes = classes | append: " " | append: margin_prefix | append: "mr-[" | append: px | append: "px]" %}
	{% endif %}
{% endif %}

{% case size %}
{% when 'small' %}
	{% assign classes = classes | append: " w-[800px] mx-auto" %}
{% endcase %}


<div class="{{ classes }} relative">
		<div class="container relative">
	{% for component in blocks %}
		{% bookshop "{{component._bookshop_name}}" bind: component %}
	{% endfor %}
	</div>
</div>