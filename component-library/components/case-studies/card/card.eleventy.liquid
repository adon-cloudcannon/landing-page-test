<a class="group transition flex-auto md:h-[550px] max-w-[450px] min-w-[309px] block p-4 relative border border-black rounded-xl bg-white hover:scale-105" 
		href="{{ case_study.url }}">
	<div class="flex border-b border-gray-300 pb-4">
		<div class="grow flex">
			{% bookshop "helpers/image" image: case_study.data.person.image.path, alt: case_study.data.person.name, responsive: true, classes: 'rounded-full h-12 w-12 mr-3', width: 48 %}
			<div class="grow">
				<div class="font-bold">{{ case_study.data.person.name }}</div>
				<div class="text-gray-500 text-sm">{{ case_study.data.person.position }}</div>
			</div>
		</div>
		<div class="flex items-center justify-end">
			<img src="{{ case_study.data.logo }}" class="h-7 max-w-[100px]" alt="{{ case_study.data.title }}">
		</div>
	</div>

	<div class="my-4">
		{% bookshop "helpers/image" image: case_study.data.image.path alt: case_study.data.image.alt responsive: true classes: 'rounded-xl' width: 360 %}
	</div>
	<div class="text-2xl font-bold pb-10">
		{{ case_study.data.heading }} 
	</div>
	<div class="font-bold absolute bottom-5 text-cc transition">
		<span class="group-hover:underline">Read the case study</span>
		<span class="inline-block w-4 relative top-[3px] outline-cc ml-1">
			{{ '/src/images/icons/outline/arrow-right.svg' | svgContents }}
		</span>
	</div>
</a>