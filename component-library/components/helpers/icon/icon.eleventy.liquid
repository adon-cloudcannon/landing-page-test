{% case icon_color %}
{% when 'purple-dark' %} 
	{% assign foreground = '#4e1da7' %}
	{% assign background = '#170932' %}
{% when 'purple' %}
	{% assign foreground = '#5112ad' %}
	{% assign background = '#ebdffc' %}
{% when 'violet-dark' %} 
	{% assign foreground = '#7e1da7' %}
	{% assign background = '#260932' %}
{% when 'violet' %}
	{% assign foreground = '#b12cc8' %}
	{% assign background = '#f7e7fa' %}
{% when 'blue-dark' %} 
	{% assign foreground = '#271da7' %}
	{% assign background = '#0c0932' %}
{% when 'blue' %}
	{% assign foreground = '#004684' %}
	{% assign background = '#d5ebff' %}
{% when 'orange-dark' %} 
	{% assign foreground = '#a7631d' %}
	{% assign background = '#321e09' %}
{% when 'orange' %}
	{% assign foreground = '#ff6838' %}
	{% assign background = '#ffeee9' %}
{% when 'yellow-dark' %}
	{% assign foreground = '#c3c217' %}
	{% assign background = '#3b3a07' %}
{% when 'yellow' %}
	{% assign foreground = '#ffd627' %}
	{% assign background = '#fffae7' %}
{% when 'green-dark' %}
	{% assign foreground = '#2fba6b' %}
	{% assign background = '#0e3820' %}
{% when 'green' %}
	{% assign foreground = '#37963c' %}
	{% assign background = '#e8f7e2' %}
{% when 'red-dark' %}
	{% assign foreground = '#c31717' %}
	{% assign background = '#3b0707' %}
{% when 'red' %}
	{% assign foreground = '#f30000' %}
	{% assign background = '#ffe1e1' %}
{% when 'pink-dark' %}
	{% assign foreground = '#eca9a9' %}
	{% assign background = '#473333' %}
{% when 'pink' %}
	{% assign foreground = '#f16462' %}
	{% assign background = '#fdeeee' %}
{% when 'teal-dark' %}
	{% assign foreground = '#29d59f' %}
	{% assign background = '#0c4030' %}
{% when 'teal' %}
	{% assign foreground = '#00baa9' %}
	{% assign background = '#dbfffc' %}
{% else %}
	{% assign foreground = '#373737' %}
	{% assign background = '#e9e9e9' %}
{% endcase %}

{% case icon_size %}
{% when 'big' %}
	{% assign size_classes = "w-[70px] h-[70px]" %}
{% else %}
	{% assign size_classes = "w-14 h-14" %}
{% endcase %}

{% if icon_path contains 'solid' %}
	{% assign svg_style = 'fill-[' | append: foreground | append: ']' %}
{% else %}
	{% assign svg_style = 'stroke-[' | append: foreground | append: ']' %}
{% endif %}

<div class="{{ size_classes }} bg-[{{ background }}] p-3 rounded-2xl">
	{{ '/src/images/icons/' | append: icon_path | append: '.svg' | svgContents: svg_style }}
</div>