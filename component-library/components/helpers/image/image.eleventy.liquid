{% if image contains 'cc-dam.imgix.net' %}
	
	{% unless width %}
		{% assign width = 1216 %}
	{% endunless %}

	{% assign dimensions = image | image_resize: width, 1 | image_dimensions %}

	{% if responsive %}
		<picture>
			{% assign c_width = width %}
			{% for i in (0..5) %}
				{% assign m = i | times: 300 %}
				{% assign i_width = width | minus: m %}
				{% if i_width < 200 %}
					{% break %}
				{% endif %}
				{% assign c_width = i_width %}
				<source media="(min-width: {{ c_width }}px)" srcset="{{ image | image_resize: c_width, 2 }} 2x, {{ image | image_resize: c_width, 1 }} 1x">
			{% endfor %}
			
			<img src="{{ image | image_resize: c_width, 1 }}" {{ dimensions }} alt="{{ alt }}" class="{{ classes }}">
		</picture>
	{% else %}
		<img src="{{ image | image_resize: width, 1 }}" alt="{{ alt }}" {{ dimensions }} class="{{ classes }}">
	{% endif %}
{% else %}
	<img src="{{ image }}" alt="{{ alt }}" class="{{ classes }}">
{% endif %}