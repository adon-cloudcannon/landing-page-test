{% if image contains 'cc-dam.imgix.net' %}
	
	{% if width | is_integer %}
		{% assign w = width %}
	{% else  %}
		{% assign w = 1216 %}
	{% endif %}

	{% assign dimensions = image | image_resize: w, 1 | image_dimensions %}

	{% assign image_path = image | replace: ' ', '%20' %}

	{% if responsive %}
		<picture>
			{% assign c_width = w %}
			{% for i in (0..5) %}
				{% assign m = i | times: 300 %}
				{% assign i_width = w | minus: m %}
				{% if i_width < 200 %}
					{% break %}
				{% endif %}
				{% assign c_width = i_width %}
				<source media="(min-width: {{ c_width }}px)" srcset="{{ image_path | image_resize: c_width, 2 }} 2x, {{ image_path | image_resize: c_width, 1 }} 1x">
			{% endfor %}
			
			<img src="{{ image_path | image_resize: c_width, 1 }}" {{ dimensions }} alt="{{ alt }}" class="{{ classes }}">
		</picture>
	{% else %}
		<img src="{{ image_path | image_resize: w, 1 }}" alt="{{ alt }}" {{ dimensions }} class="{{ classes }}">
	{% endif %}
{% else %}
	<img src="{{ image }}" alt="{{ alt }}" class="{{ classes }}">
{% endif %}