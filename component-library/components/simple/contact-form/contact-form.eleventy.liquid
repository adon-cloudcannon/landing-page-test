<form>
	<div class="md:grid grid-cols-2 gap-x-4">
		<div>
			<label for="firstname" class="block text-lg mt-4 mb-1 font-bold">First Name</label>
			<input type="text" name="firstname" id="firstname" class="border-2 border-gray-400 rounded-lg w-full p-3 text-xl focus:outline-2 focus:outline-blue-200">
		</div>

		<div>
			<label for="lastname" class="block text-lg mt-4 mb-1 font-bold">Last Name</label>
			<input type="text" name="lastname" id="name" class="border-2 border-gray-400 rounded-lg w-full p-3 text-xl focus:outline-2 focus:outline-blue-200">
		</div>
	</div>

	<label for="email" class="block text-lg mt-4 mb-1 font-bold">Email</label>
	<input type="email" name="email" id="email" class="border-2 border-gray-400 rounded-lg w-full p-3 text-xl focus:outline-2 focus:outline-blue-200">

	<label for="message" class="block text-lg mt-4 mb-1 font-bold">Message</label>
	<select>
		<option label="Please Select" disabled="" value="">Please Select</option>
		<option label="I have a general enquiry about CloudCannon" value="General Enquiry">I have a general enquiry about CloudCannon</option>
		<option label="I am not a CloudCannon user, but am interested in trying it out" value="Sales question">I am not a CloudCannon user, but am interested in trying it out</option>
		<option label="I am a CloudCannon user, and have a support question" value="Support question">I am a CloudCannon user, and have a support question</option>
	</select>

	{% bookshop 'helpers/button' type:input, text:'Send Message', size:styles.size, style:'normal' %}
</form>