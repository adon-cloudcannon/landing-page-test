<form>
	<div class="md:grid grid-cols-2 gap-x-4">
		<div>
			<label for="name" class="block text-lg mt-4 mb-1 font-bold">Name</label>
			<input type="text" name="name" id="name" class="border border-gray-400 rounded-lg w-full p-3 text-xl focus:outline-2 focus:outline-blue-200">
		</div>

		<div>
			<label for="email" class="block text-lg mt-4 mb-1 font-bold">Email</label>
			<input type="email" name="email" id="email" class="border border-gray-400 rounded-lg w-full p-3 text-xl focus:outline-2 focus:outline-blue-200">
		</div>
	</div>
	<label for="message" class="block text-lg mt-4 mb-1 font-bold">Message</label>
	<textarea name="message" id="message"class="border border-gray-400 h-52 resize-none rounded-lg w-full p-3 mb-5 text-xl focus:outline-2 focus:outline-blue-200"></textarea>

	{% bookshop 'helpers/button' type:input, text:'Send Message', size:styles.size, style:'normal' %}
</form>