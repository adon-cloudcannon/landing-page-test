{% assign classes = "" %}
{% assign css_styles = " " %}

{% if styles.center_text %}
	{% assign classes = classes | append: " text-center" %}
{% endif %}

{% if styles.margin %}
	{% if styles.margin.top %}
		{% assign css_styles = css_styles | append: " " | append: "margin-top:" | append: styles.margin.top | append: "px;" %}
	{% endif %}

	{% if styles.margin.bottom %}
		{% assign css_styles = css_styles | append: " " | append: "margin-bottom:" | append: styles.margin.bottom | append: "px;" %}
	{% endif %}
{% endif %}


{% case styles.width %}
{% when 'tight' %}
	{% assign classes = classes | append: " max-w-screen-md mx-auto" %}
{% endcase %}

<div style="{{ css_styles }}">
	<p class="text-4xl {{ classes }}">{{ content.emoji }}</p>
	<p class="mt-3 mb-1 font-medium tracking-widest uppercase text-cc {{ classes }}">{{ content.sub_title }}</p>
	<h3 class="font-bold text-4xl mb-9 {{ classes }}">{{ content.title }}</h3>
</div>