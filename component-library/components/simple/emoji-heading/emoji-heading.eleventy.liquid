{% assign classes = "" %}

{% if styles.center_text %}
	{% assign classes = classes | append: " text-center" %}
{% endif %}

<p class="text-4xl {{ classes }}">{{ content.emoji }}</p>
<p class="mt-3 mb-1 font-medium tracking-widest uppercase text-cc {{ classes }}">{{ content.sub_title }}</p>
<h3 class="font-bold text-4xl mb-9 {{ classes }}">{{ content.title }}</h3>