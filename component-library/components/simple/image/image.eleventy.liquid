{% assign classes = " relative" %}
{% assign css_styles = "" %}
{% assign transform = "" %}
{% if styles.transform %}
	{% assign transform = transform | append: " transform:" %}
	{% if styles.transform.scale %}
		{% assign transform = transform | append: " scale(" | append: styles.transform.scale | append: ")" %}
	{% endif %}

	{% if styles.transform.translate_x %}
		{% assign transform = transform | append: " translateX(" | append: styles.transform.translate_x | append: "px)" %}
	{% endif %}

	{% if styles.transform.translate_y %}
		{% assign transform = transform | append: " translateY(" | append: styles.transform.translate_y | append: "px)" %}
	{% endif %}

	{% if styles.transform.rotate %}
		{% assign transform = transform | append: " rotate(" | append: styles.transform.rotate | append: "deg)" %}
	{% endif %}

	{% if styles.transform.skew %}
		{% assign transform = transform | append: " skew(" | append: styles.transform.skew | append: "deg)" %}
	{% endif %}


	{% assign transform = transform | append: ";" %}
	{% assign css_styles = css_styles | append: transform %}
{% endif %}

{% if styles.margin %}
	{% if styles.margin.top %}
		{% assign css_styles = css_styles | append: " " | append: "margin-top:" | append: styles.margin.top | append: "px;" %}
	{% endif %}

	{% if styles.margin.left %}
		{% assign css_styles = css_styles | append: " " | append: "margin-left:" | append: styles.margin.left | append: "px;" %}
	{% endif %}

	{% if styles.margin.right %}
		{% assign css_styles = css_styles | append: " " | append: "margin-right:" | append: styles.margin.right | append: "px;" %}
	{% endif %}

	{% if styles.margin.bottom %}
		{% assign css_styles = css_styles | append: " " | append: "margin-bottom:" | append: styles.margin.bottom | append: "px;" %}
	{% endif %}
{% endif %}

{% if styles.position %}
	{% if styles.position.top %}
		{% assign css_styles = css_styles | append: " " | append: "top:" | append: styles.position.top | append: "px;" %}
	{% endif %}

	{% if styles.position.left %}
		{% assign css_styles = css_styles | append: " " | append: "left:" | append: styles.position.left | append: "px;" %}
	{% endif %}

	{% if styles.position.right %}
		{% assign css_styles = css_styles | append: " " | append: "right:" | append: styles.position.right | append: "px;" %}
	{% endif %}

	{% if styles.position.bottom %}
		{% assign css_styles = css_styles | append: " " | append: "bottom:" | append: styles.position.bottom | append: "px;" %}
	{% endif %}
{% endif %}

{% if styles.ontop %}
	{% assign classes = classes | append: " z-10" %}
{% endif %}

{% if styles.center %}
	{% assign classes = classes | append: " mx-auto block" %}
{% endif %}

{% if styles.rounded %}
	{% assign classes = classes | append: " rounded-2xl" %}
{% endif %}

{% if styles.border %}
	{% assign classes = classes | append: " border" %}
{% endif %}

<img src="{{ content.image }}" alt="{{ content.alt }}" class="{{ classes }}" style="{{ css_styles }}">