{% assign classes = "" %}

{% if styles.scale %}
	{% assign classes = classes | append: " scale-[" | append: styles.scale | append: "]" %}
{% endif %}

{% if styles.margin.top %}
	{% assign classes = classes | append: " mt-[" | append: styles.margin.top | append: "px]" %}
{% endif %}

{% if styles.margin.left %}
	{% assign classes = classes | append: " ml-[" | append: styles.margin.left | append: "px]" %}
{% endif %}

{% if styles.margin.bottom %}
	{% assign classes = classes | append: " mb-[" | append: styles.margin.bottom | append: "px]" %}
{% endif %}

{% if styles.margin.right %}
	{% assign classes = classes | append: " mr-[" | append: styles.margin.right | append: "px]" %}
{% endif %}

{% if styles.ontop %}
	{% assign classes = classes | append: " relative z-10" %}
{% endif %}

{% if styles.center %}
	{% assign classes = classes | append: " mx-auto block" %}
{% endif %}

{% if styles.rounded %}
	{% assign classes = classes | append: " rounded-2xl" %}
{% endif %}

{% if styles.border %}
	{% assign classes = classes | append: " border" %}
{% endif %}

<img src="{{ content.image }}" alt="{{ content.alt }}" class="{{ classes }}">