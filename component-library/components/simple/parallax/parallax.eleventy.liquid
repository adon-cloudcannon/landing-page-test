<style>
    .c-simple-parallax-overflow-hidden{ 
        display:flex;
        justify-content:center;
        margin-left:-2rem;
        margin-right:-2rem;
        overflow:hidden;
    }

    @media (min-width: 1024px) {
        .c-simple-parallax-overflow-hidden{ 
            margin-left:0;
            top: 0;
            bottom:0;
            left: 50%;
            z-index:3;
            position: absolute;
            width:100%;
        }
    }
    .c-simple-parallax-wrapper{
        transform: rotate(-18deg);
        transform-origin: top left;        
        z-index: 2;
    }
    .c-simple-parallax {
        width:1000px;
        display:grid;
        grid-template-columns: repeat(8, 1fr);
        grid-template-rows: repeat(16, 1fr);
        gap:1rem;
    }

    .c-simple-parallax img{
        border-radius:8px;
        box-shadow: 0px 4.135px 16.541px 0px rgba(0, 0, 0, 0.20);
    }

    .c-simple-parallax img:nth-of-type(1){
        grid-column: 1 / 2;
        grid-row: 2 / 4;
    }
    .c-simple-parallax img:nth-of-type(2){
        grid-column: 2 / 3;
        grid-row: 1 / 3;
    }
    .c-simple-parallax img:nth-of-type(3){
        grid-column: 3 / 4;
        grid-row: 2 / 4;
    }
    .c-simple-parallax img:nth-of-type(4){
