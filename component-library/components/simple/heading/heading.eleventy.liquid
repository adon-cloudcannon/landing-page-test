{% assign el = "h4" %}
{% assign classes = " leading-tight" %}
{% assign css_styles = " " %}

{% case styles.size %}
{% when 'h1' %}
	{% assign el = "h1" %}
	{% assign classes = classes | append: " text-7xl" %}
{% when 'h2' %}
	{% assign el = "h2" %}
	{% assign classes = classes | append: " text-5xl" %}
{% when 'h3' %}
	{% assign el = "h3" %}
	{% assign classes = classes | append: " text-4xl" %}
{% endcase %}

{% case styles.color %}
{% when 'white' %}
	{% assign classes = classes | append: " text-white" %}
{% endcase %}

{% case styles.align %}
{% when 'center' %}
	{% assign classes = classes | append: " text-center" %}
{% endcase %}

{% if margin %}
	{% if margin.top %}
		{% assign css_styles = css_styles | append: " " | append: "margin-top:" | append: styles.margin.top | append: "px;" %}
	{% endif %}

	{% if margin.bottom %}
		{% assign css_styles = css_styles | append: " " | append: "margin-bottom:" | append: styles.margin.bottom | append: "px;" %}
	{% endif %}
{% endif %}


{% case styles.width %}
{% when 'tight' %}
	{% assign classes = classes | append: " max-w-screen-md mx-auto" %}
{% endcase %}

<{{ el }} class="{{ classes }} font-bold" style="{{ css_styles }}">
	{{ content.text }}
</{{ el }}>