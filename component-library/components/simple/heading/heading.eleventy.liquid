{% assign el = "h4" %}
{% assign classes = " leading-tight" %}
{% case size %}
{% when 'hero' %}
	{% assign el = "h1" %}
	{% assign classes = classes | append: " text-7xl" %}
{% when 'h2' %}
	{% assign el = "h2" %}
	{% assign classes = classes | append: " text-5xl" %}
{% when 'h3' %}
	{% assign el = "h3" %}
	{% assign classes = classes | append: " text-lg" %}
{% endcase %}

{% case color %}
{% when 'white' %}
	{% assign classes = classes | append: " text-white" %}
{% endcase %}
<{{ el }} class="{{ classes }} max-w-screen-md mx-auto font-bold text-center">{{ text }}</{{ el }}>