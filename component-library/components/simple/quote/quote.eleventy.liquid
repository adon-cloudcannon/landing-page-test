{% assign classes = "" %}

{% assign desktop_styles = "" %}
{% assign tablet_styles = "" %}
{% assign mobile_styles = "" %}

{% assign image_desktop_styles = "" %}
{% assign image_tablet_styles = "" %}
{% assign image_mobile_styles = "" %}

{% assign desktop_styles = desktop_styles | render_margin: styles, 'desktop' %}
{% assign tablet_styles = tablet_styles | render_margin: styles, 'tablet' %}
{% assign mobile_styles = mobile_styles | render_margin: styles, 'mobile' %}

{% assign desktop_styles = desktop_styles | render_block_alignment: styles, 'desktop' %}
{% assign tablet_styles = tablet_styles | render_block_alignment: styles, 'tablet' %}
{% assign mobile_styles = mobile_styles | render_block_alignment: styles, 'mobile' %}

{% assign image_desktop_styles = image_desktop_styles | render_transform: styles, 'desktop' %}
{% assign image_desktop_styles = image_desktop_styles | render_transform: styles, 'tablet' %}
{% assign image_desktop_styles = image_desktop_styles | render_transform: styles, 'mobile' %}

{% case styles.background %}
	{% when 'caramel' %}
		{% assign classes = classes | append: " bg-caramel [&_p_a]:text-cc" %}
	{% when 'sky' %}
		{% assign classes = classes | append: " bg-sky [&_p_a]:text-cc" %}
	{% when 'sea' %}
		{% assign classes = classes | append: " bg-sea [&_p_a]:text-cc" %}
	{% when 'cc-blue' %}
		{% assign classes = classes | append: " bg-cc text-white [&_p_a]:text-cc" %}
	{% when 'ash' %}
		{% assign classes = classes | append: " bg-ash [&_p_a]:text-cc" %}
	{% when 'night' %}
		{% assign classes = classes | append: " bg-night text-white" %}
	{% else %}
		{% assign classes = classes | append: " bg-white [&_p_a]:text-cc" %}
{% endcase %}

{% assign container_name = "quote" | UUID %}

<style>
	@media (min-width: 1280px) {
		.{{ container_name}} {
			{{ desktop_styles }}
		}
	}

	@media (min-width: 768px) and (max-width: 1279px) {
		.{{ container_name}} {
			{{ tablet_styles }}
		}
	}

	@media (max-width: 767px) {
		.{{ container_name}} {
			{{ mobile_styles }}
		}
	}
</style>

<div class="flex {{ classes }} {{ container_name }} rounded-2xl max-w-4xl">
	<div class="w-[400px] px-5 relative hidden md:block">
		<img src="{{ content.image }}" alt="{{ content.name }}" class="absolute bottom-0 max-h-[345px]">
	</div>
	<div class="flex-1 px-5 py-10">
		<img src="{{ content.logo }}" alt="{{ content.company }}" width="150">
		<blockquote class="text-2xl my-8 font-bold">
			{{ content.quote }}
		</blockquote>

		<div class="text-2xl font-bold">{{ content.name }}</div>
		<div>{{ content.position }}</div>
	</div>
</div>