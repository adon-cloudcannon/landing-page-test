{% unless categories contains "Starter" %}   
    <div class="c-simple-sidebar flex flex-col mt-0 lg:mt-5 min-w-[200px]">    
        <h3 class="mb-2.5 text-carbon_800 font-bold text-xl">Choose your SSG:</h3>
        <div class="gap-2.5 flex flex-col mb-5">
            {% assign i = 0 %}
            {% for ssg in ssgs %}
                {% assign i = i | plus: 1 %}
                {% bookshop 'simple/ssg-radio' ssg_name:ssg.ssg_name idx:i %}
            {% endfor %}
        </div>
        {% capture button_content %}
            text: 'Deploy to CloudCannon'
        {% endcapture %}
        {% assign button_content = button_content | ymlify %}
        {% bookshop 'simple/template-button' content:button_content show:"true" %}
        <div class="dividier-line flex items-center py-8">
            <span class="border-b-2 w-full"></span>
        </div>
        <div class="links flex flex-col gap-2.5">
            <a href="#" class="text-cc font-bold flex items-center gap-2.5">
                View on Github
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" class="stroke-current fill-current inline-block w-3 h-3 text-cc">
                    <path fill-rule="evenodd" d="M16.28 11.47a.75.75 0 010 1.06l-7.5 7.5a.75.75 0 01-1.06-1.06L14.69 12 7.72 5.03a.75.75 0 011.06-1.06l7.5 7.5z" clip-rule="evenodd"></path>
                </svg>
            </a>
            <a href="#" class="text-cc font-bold flex items-center gap-2.5">
                Preview site 
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" class="stroke-current fill-current inline-block w-3 h-3 text-cc">
                    <path fill-rule="evenodd" d="M16.28 11.47a.75.75 0 010 1.06l-7.5 7.5a.75.75 0 01-1.06-1.06L14.69 12 7.72 5.03a.75.75 0 011.06-1.06l7.5 7.5z" clip-rule="evenodd"></path>
                </svg>
            </a>
        </div>
        <div class="dividier-line flex items-center py-8">
            <span class="border-b-2 w-full"></span>
        </div>
        {% if contributor %}
            <div class="flex flex-col gap-5">
                <h3 class="text-carbon_800 font-bold text-xl">Contributor:</h3>
                <div class="contributor-block">
                    <div class="contributor-logo flex items-center text-2xl font-bold">
                        {% if contributor.logo %}
                            <img src="{{ contributor.logo }}" class="mr-1 h-6" />
                        {% endif %}                
                        {{ contributor.name }}
                    </div>
                    {% if contributor.description %}
                        <div class="mt-4 max-w-[200px]">
                            {{ contributor.description }}
                        </div>
                    {% endif %}
                </div>
                <a href="#" class="text-cc font-bold flex items-center gap-2.5">
                    View Partner's page 
                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" class="stroke-current fill-current inline-block w-3 h-3 text-cc">
                        <path fill-rule="evenodd" d="M16.28 11.47a.75.75 0 010 1.06l-7.5 7.5a.75.75 0 01-1.06-1.06L14.69 12 7.72 5.03a.75.75 0 011.06-1.06l7.5 7.5z" clip-rule="evenodd"></path>
                    </svg>
                </a>
            </div>
        {% endif %}    
    </div>
{% else %}
    <div class="c-simple-sidebar flex flex-col mt-0 min-w-[200px]">    
        <h3 class="mb-2.5 text-carbon_800 font-bold text-xl">What you'll get:</h3>
        <div class="text-block leading-8">
            <b>Framework:</b> Hugo<br/>
            <b>Use case:</b> Boilerplate<br/>
            <b>CSS:</b> Tailwind CSS<br/>
            <b>CMS:</b> CloudCannon
        </div>
        <div class="dividier-line flex items-center py-8">
            <span class="border-b-2 w-full"></span>
        </div>
        <h3 class="mb-2.5 text-carbon_800 font-bold text-xl">Bonus features:</h3>
        <div class="text-block leading-8 mb-[30px]">
            <a class="font-bold text-cc underline" href="#">Rosey.app</a><br/>
            <a class="font-bold text-cc underline" href="#">Pagefind.app</a>
        </div>       
        {% capture button_content %}
            text: 'View on Github'
        {% endcapture %}
        {% assign button_content = button_content | ymlify %}
        {% bookshop 'simple/template-button' content:button_content show:"true"  %} 
    </div>
{% endunless %}