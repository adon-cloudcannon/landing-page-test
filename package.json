{
  "scripts": {
    "clean": "del _site",
    "dev:styles": "npx tailwindcss -i src/styles/tailwind.css -c src/styles/tailwind.config.js -o _site/style.css --watch",
    "dev:scripts": "esbuild src/main.js --bundle --watch --outfile=_site/js/main.js",
    "dev:11ty": "eleventy --serve --watch",
    "start": "run-p dev:*",
    "build:styles": "NODE_ENV=production npx tailwindcss -i src/styles/tailwind.css -c src/styles/tailwind.config.js -o _site/style.css --minify",
    "build:scripts": "esbuild src/main.js --bundle --minify --outfile=_site/js/main.js",
    "build": "run-s build:*"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
    "@alpinejs/intersect": "^3.10.4",
    "@tailwindcss/typography": "^0.5.8",
    "alpinejs": "^3.10.4",
    "csvtojson": "^2.0.10",
    "del-cli": "^5.0.0",
    "eleventy-plugin-local-images": "^0.4.1",
    "eleventy-plugin-svg-contents": "^0.7.0",
    "esbuild": "^0.15.10",
    "js-yaml": "^4.1.0",
    "markdown-it-link-attributes": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "probe-image-size": "^7.2.3",
    "punycode": "^2.1.1",
    "tailwindcss": "^3.2.4"
  },
  "dependencies": {
    "@alpinejs/collapse": "^3.10.5",
    "@alpinejs/focus": "^3.10.5",
    "@alpinejs/persist": "^3.11.1",
    "@bookshop/browser": "3.3.3",
    "@bookshop/eleventy-bookshop": "3.3.3",
    "@bookshop/eleventy-engine": "3.3.3",
    "@bookshop/generate": "3.3.3",
    "@tailwindcss/container-queries": "^0.1.0",
    "markdown-it": "^13.0.1",
    "recursive-copy": "^2.0.14"
  }
}
