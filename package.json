{
  "scripts": {
    "clean": "cd ./src/ && del _site",
    "dev:styles": "cd ./src/ && npx tailwindcss -i styles/tailwind.css -c styles/tailwind.config.js -o _site/style.css --watch",
    "dev:scripts": "cd ./src/ && esbuild main.js --bundle --watch --outfile=_site/js/main.js",
    "dev:11ty": "cd ./src/ && eleventy --serve --watch",
    "start": "run-p dev:*",
    "build:styles": "cd ./src/ && NODE_ENV=production npx tailwindcss -i styles/tailwind.css -c styles/tailwind.config.js -o _site/style.css --minify",
    "build:scripts": "cd ./src/ && esbuild main.js --bundle --minify --outfile=_site/js/main.js",
    "build:11ty": "cd ./src/ && ELEVENTY_PRODUCTION=true eleventy",
    "build": "run-s clean build:*"
    
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@alpinejs/intersect": "^3.10.4",
    "@tailwindcss/typography": "^0.5.7",
    "alpinejs": "^3.10.4",
    "csvtojson": "^2.0.10",
    "del-cli": "^5.0.0",
    "eleventy-plugin-svg-contents": "^0.7.0",
    "esbuild": "^0.15.10",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.1.8"
  },
  "dependencies": {
    "@bookshop/browser": "3.3.0",
    "@bookshop/eleventy-bookshop": "3.3.0",
    "@bookshop/eleventy-engine": "3.3.0",
    "@bookshop/generate": "3.3.0"
  }
}
